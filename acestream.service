[Unit]
Description=dockerized acestream
Requires=docker.service
After=docker.service

[Service]
#Type=simple
ExecStartPre=-/usr/bin/docker rm -f acestream-instance
ExecStartPre=-/usr/bin/docker pull andreymalyshenko/acestream:x86_64
ExecStart=/usr/bin/docker run --privileged --rm --net=host --name acestream-instance -p 62062:62062 andreymalyshenko/acestream:x86_64
ExecStartPost=/bin/sh -c 'while ! docker ps | grep acestream-instance ; do sleep 0.2; done'   
ExecStop=/usr/bin/docker rm -f acestream-instance
TimeoutSec=0
RemainAfterExit=no
Restart=always

[Install]
WantedBy=multi-user.target
